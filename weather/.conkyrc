# Conky Weather #

# Conky settings #
background no
update_interval 1
double_buffer yes
no_buffers yes

# Window specifications #
own_window yes
own_window_type normal
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_title
own_window_argb_visual no
own_window_argb_value 0
own_window_transparent yes

# Alignment #
alignment middle_left
gap_x 22
gap_y 220

minimum_size 300

border_inner_margin 15
border_outer_margin 0

# Graphics settings #
draw_shades yes
draw_outline no
draw_borders no
draw_graph_borders no

# Text settings #
use_xft yes
xftalpha 1
xftfont Droid Sans Mono:size=11

override_utf8_locale yes

# disable the image cache
imlib_cache_size 0

# Defining colors #
default_color FFFFFF
# Shades of Gray
color0 e5e5e5 #gray90
color1 c4c4c4 #gray77
color2 a3a3a3 #gray64
color3 828282 #gray51
color4 616161 #gray38
color5 404040 #gray25
color6 1f1f1f #gray12
# Shades of Green
color7 4C7523 #green_dark
color8 87CF3E #green
color9 C7F994 #green_light

# stuff after 'TEXT' will be formatted on screen

TEXT
${execi 300 curl -s "http://weather.yahooapis.com/forecastrss?w=2480896&u=f" -o ~/.cache/weather.xml}${color8}${font Droid Sans:style=Bold:style=Bold:size=20}${execi 300 grep "yweather:location" ~/.cache/weather.xml | grep -o "city=\"[^\"]*\"" | grep -o "\"[^\"]*\"" | grep -o "[^\"]*"} ${execi 300 grep "yweather:location" ~/.cache/weather.xml | grep -o "region=\"[^\"]*\"" | grep -o "\"[^\"]*\"" | grep -o "[^\"]*"}${font}${color}
${color0}${font Droid Sans:size=60}${alignr 25}${execi 300 grep "yweather:condition" ~/.cache/weather.xml | grep -o "temp=\"[^\"]*\"" | grep -o "\"[^\"]*\"" | grep -o "[^\"]*"}°${font}${voffset -11}
${color}${font Droid Sans:size=12}${execi 300 cp -f ~/.conky/weather/$(grep "yweather:condition" ~/.cache/weather.xml | grep -o "code=\"[^\"]*\"" | grep -o "\"[^\"]*\"" | grep -o "[^\"]*").png ~/.cache/weather.png}${image ~/.cache/weather.png -p 0,45 -s 60x60}${font}
